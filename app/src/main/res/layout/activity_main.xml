<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD7AB"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:alpha=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_vector" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="357dp"
        android:layout_height="103dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="524dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/input_box" />

    <EditText
        android:id="@+id/Input_Pass"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="15dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_Uname" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="356dp"
        android:layout_height="105dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="432dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/input_box" />

    <EditText
        android:id="@+id/Input_Uname"
        android:layout_width="251dp"
        android:layout_height="55dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="452dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="text"
        android:padding="15dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="330dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#A2B867"
        android:text="Login"
        android:textColor="#F3EDED"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_Pass" />

</androidx.constraintlayout.widget.ConstraintLayout>