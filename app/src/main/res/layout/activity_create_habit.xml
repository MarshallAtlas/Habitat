<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD7AB"
    tools:context=".CreateHabit">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dash_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="609dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:padding="15dp"
            android:layout_gravity="center"
            android:text="Add Habit" />

        <EditText
            android:id="@+id/add_habit_name"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Habit name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:layout_gravity="center"
            android:text="Set Color" />

        <RadioGroup
            android:id="@+id/color_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="#F1F1F1">

            <RadioButton
                android:id="@+id/radioButtonRed"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="Red" />

            <RadioButton
                android:id="@+id/radioButtonBlue"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="Blue" />

            <RadioButton
                android:id="@+id/radioButtonGreen"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="Green" />
        </RadioGroup>

        <Button
            android:id="@+id/createHabitButton"
            android:layout_width="299dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#57710F"


            android:padding="20dp"
            android:text="Create Habit"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>