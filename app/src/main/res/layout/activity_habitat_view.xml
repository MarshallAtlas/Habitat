<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD7AB"
    tools:context=".HabitatView">

    <ImageView
        android:id="@+id/dash_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="424dp"
        android:alpha=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dash_background" />

    <ImageView
        android:id="@+id/dash_background"
        android:layout_width="match_parent"
        android:layout_height="686dp"
        android:layout_marginTop="16dp"
        android:alpha=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dash_background" />

    <!-- nav bar -->

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="795dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Habit_Name_Display"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#A2B867"
            android:padding="15dp"
            android:text="Habit Title"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/streak_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#A2B867"
            android:textSize="50dp"
            android:textColor="#57710F"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:text="123" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Milestones"
            android:textColor="#868E71"
            android:textSize="18sp" />
        <!-- add milestones here -->

        <Button
            android:id="@+id/habit_done_button"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="#57710F"
            android:textSize="20dp"
            android:text="Done For Today!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A2B867"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Milestone_name"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="7 Days"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/gemReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="10 gems"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        </LinearLayout>
        <!-- Milestone 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A2B867"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Milestone_name1"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="25 Days"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/gemReward2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="10 gems"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- milestone 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A2B867"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Milestone_name3"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="50 Days"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/gemReward3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="10 gems"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_freeze_display"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="#A2B867"
                android:text="Add Freeze" />

            <TextView
                android:id="@+id/freeze_display"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="3/3"
                android:padding="5dp"
                android:textColor="#A2B867"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/nav_base"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nav_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/Shop_icon"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/shop_icon" />
    <ImageView
        android:id="@+id/Add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/add_icon" />

    <ImageView
        android:id="@+id/Collection_Icon"
        android:layout_width="104dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        app:srcCompat="@drawable/habitat_logoo" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>